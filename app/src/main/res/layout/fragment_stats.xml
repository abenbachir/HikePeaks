            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Total number of steps taken"/>

        <TextView
            android:id="@+id/stats_tot_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:text="Steps" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_overlay"/>

        <!-- NOMBRE MOYEN DE PAS -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Average number of steps taken"/>

        <TextView
            android:id="@+id/stats_avg_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:text="Steps" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_overlay"/>

        <!-- NOMBRE TOTAL DE PHOTOS PRISES -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Total number of pictures taken"/>

        <TextView
            android:id="@+id/stats_tot_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:text="Pictures" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_overlay"/>



        <!-- NOMBRE MOYEN DE PHOTOS PRISES -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
